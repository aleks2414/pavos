<%= render 'welcome/bread' %>



<div id="tablon">
<div class="container">
  <h1 class="center">Todos los Eventos</h1> <br>
<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>ID</th>
          <th>Status</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th>Fecha</th>
          <th>Lugar</th>
          <th>Hora</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= event.id%></td>
            <td><%= event.habilitado %></td>
            <td><%= event.nombre %></td>
            <td><%= event.categoria %></td>
            <td><%= event.fecha %></td>
            <td><%= event.lugar %></td>
            <td><%= event.hora %></td>
            <td><%= link_to 'Ver más', event %></td>
            <td><%= link_to 'Editar', edit_event_path(event) %></td>
            <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   </div>
</div>



<br>
