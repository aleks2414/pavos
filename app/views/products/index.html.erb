<%= render 'welcome/bread' %>


<div id="tablon">
<div class="container">
  <h1 class="center">Todos los Productos</h1> <br>
<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>ID</th>
          <th>Status</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id%></td>
            <td><%= product.disponible %></td>
            <td><%= product.nombre %></td>
            <td><%= product.categoria %></td>
            <td><%= link_to 'Ver más', product %></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
            <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   </div>
</div>