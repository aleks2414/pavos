<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Disponible</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Categoria</th>
      <th>Precio</th>
      <th>Tiempo</th>
      <th>Foto</th>
      <th>Foto2</th>
      <th>Foto3</th>
      <th>User</th>
      <th>Beneficios</th>
      <th>Ingredientes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.disponible %></td>
        <td><%= product.nombre %></td>
        <td><%= product.descripcion %></td>
        <td><%= product.categoria %></td>
        <td><%= product.precio %></td>
        <td><%= product.tiempo %></td>
        <td><%= product.foto %></td>
        <td><%= product.foto2 %></td>
        <td><%= product.foto3 %></td>
        <td><%= product.user %></td>
        <td><%= product.beneficios %></td>
        <td><%= product.ingredientes %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

